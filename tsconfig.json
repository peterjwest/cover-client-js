{
  "compilerOptions": {
    "lib": ["es6"],
    "sourceMap": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types/"],
    "baseUrl": "."
  },
  "include": [
    "src/"
  ]
}
